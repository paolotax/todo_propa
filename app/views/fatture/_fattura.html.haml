.item[fattura]{ class: "#{ fattura.pagata? ? '' : 'da_pagare'}", data: { id: "#{fattura.id}"} }
  .actions
    %ul.nav-fattura
      %li.baule-div
        = paga_tag fattura
      %li.print
        %a{ href: "/fatture/#{fattura.slug}.pdf", title: "stampa #{fattura.causale}", target: "_blank" }
          %i.icon-tag
          Stampa
      %li.edit
        %a{ href: "/fatture/#{fattura.slug}/fattura_steps/intestazione", title: 'modifica appunto'}
          %i.icon-pencil
          Modifica
      
      %li
        = " | "
      %li.show
        %a.apri{ title: 'mostra dettagli', href: "#"}
          Apri
  
  .chiudi{ style: "float: right;"}
    %a{href: "#"}
      Chiudi
  

  .causale
    %h4
      = "#{fattura.causale} #{fattura.numero}"
      %small= "del #{l(fattura.data, format: :short).downcase}" 
  .clearfix    
  .cliente-titolo
    %strong= link_to fattura.titolo, fattura.cliente

  .consegnato
  
  .pagato

  .copie
    %strong= fattura.totale_copie
    copie
  .importo-fattura
    %strong= number_to_currency fattura.importo_fattura 
    importo
  .clearfix

  - unless fattura.appunti.empty?
    .table-righe-new
      - for appunto, righe in fattura.righe.group_by(&:appunto)
        = link_to appunto do
          = "##{appunto.id} del #{l appunto.created_at, format: :only_date} - #{appunto.status}"
        - for riga in righe
          = render riga
  - else
    .table-righe-new
      - for riga in fattura.righe
        = render riga
            
  .more-actions
    %ul.nav-fattura
      %li.baule-div
        = paga_tag fattura     
      %li.print
        %a{ href: "/fatture/#{fattura.slug}.pdf", title: "stampa #{fattura.causale}", target: "_blank" }
          %i.icon-tag
          Stampa
      %li.edit
        %a{ href: "/fatture/#{fattura.slug}/fattura_steps/intestazione", title: 'modifica appunto'}
          %i.icon-pencil
          Modifica
      %li.delete
        %a{ href: "/fatture/#{fattura.slug}", title: 'elimina', "data-confirm" => "Sei sicuro?", "data-method" => "delete", "data-remote" => true}
          %i.icon-trash
          Elimina
    
  