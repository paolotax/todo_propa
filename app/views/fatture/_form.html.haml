= form_for @fattura do |f|
  -if @fattura.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fattura.errors.count, "error")} prohibited this fattura from being saved:"
      %ul
        - @fattura.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :numero
    = f.text_field :numero
  .field
    = f.label :data
    = f.date_select :data
  .field
    = f.label :cliente_id
    = f.number_field :cliente_id
  .actions
    = f.submit 'Save'
