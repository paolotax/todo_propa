%div[riga]
  .titolo
    = riga.titolo
  .dati-riga
    .quantita
      %strong
        = riga.quantita
    .prezzo
      - unless riga.prezzo_unitario.zero?
        = pretty_prezzo riga.prezzo_unitario
      - else
        %span.badge.badge-info gratis
    .sconto
      = "- #{riga.sconto}%" unless riga.sconto.zero?
    .importo
      - unless riga.importo.zero?
        = pretty_prezzo riga.importo
      - else
        %span.badge.badge-info gratis