#create-riga.form-inline
  
  - @vendibili = Libro.unscoped.vendibili.select('distinct settore').order(:settore)
  
  = select_tag 'new_libro', option_groups_from_collection_for_select(@vendibili, :bros, :settore, :id, :titolo), {:include_blank => true, :class => 'chzn-select span4', 'data-placeholder' => "Seleziona un titolo..."}

  .pull-right
    = hidden_field_tag "new_copertina", nil
    = hidden_field_tag "new_consigliato", nil
    = number_field_tag "new_quantita", nil, :class => 'input-mini', placeholder: "quantitÃ "
    = number_field_tag "new_prezzo", nil,   :class => 'input-mini', placeholder: "prezzo"
    = number_field_tag "new_sconto", nil,   :class => 'input-mini', placeholder: "sconto"
    = link_to 'javascript:void(0)', { id: "add-riga", :class => "btn btn-success btn-mini #{model}" } do
      %i.icon-plus
  
  .clearfix  