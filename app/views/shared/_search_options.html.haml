- if params[:controller] == "appunti"
  .search_options.pjax
    %h2 Stato
    %ul
      %li= link_to "tutti", params.except(:status)
      %li= link_to_unless( params[:status] == "in_corso",   "in corso", params.merge(status: "in_corso"))
      %li= link_to_unless( params[:status] == "da_fare",    "da fare",  params.merge(status: "da_fare"))
      %li= link_to_unless( params[:status] == "in_sospeso", "in sospeso",  params.merge(status: "in_sospeso"))
      %li= link_to_unless( params[:status] == "completati", "completati",  params.merge(status: "completati"))
.search_options.pjax
  %h2 Provincie
  %ul
    - for p in @provincie
      %li= link_to_unless(params[:provincia] == p.provincia, p.provincia, params.except(:citta).merge(:provincia => p.provincia, :page => nil))
.search_options.pjax
  %h2 CittÃ 
  / .scroll-actions
  /   .next Next
  /   .prev prior
  %div.scrollable.vertical
    %div.items.pjax
      - @cit = @citta.all.in_groups_of(14)
      - for group in @cit
        %div
          - for c in group
            .item= link_to_unless(params[:citta] == c.citta, c.citta, params.merge(:citta => c.citta, :page => nil))   unless c.nil?
        