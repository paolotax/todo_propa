
.well 
  %h1 Materie
  %br

  %table.table
    %tr
      %th
      %th Materia
      %th Gruppo
      %th Ordine
      %th Copertina
      %th Consigliato
      %th
      %th
      %th

    - @materie.each do |materia|
      %tr
        %td= materia.id
        %td= materia.materia

        %td= materia.gruppo
        %td= materia.ordine
        %td= materia.prezzo_copertina
        %td= materia.prezzo_consigliato

        %td= link_to 'Mostra', materia, class: "btn"
        %td= link_to 'Modifica', edit_materia_path(materia), class: "btn"
        %td= link_to 'Elimina', materia, :confirm => 'Are you sure?', :method => :delete, class: "btn"

  %br

  = link_to 'Nuova Materia', new_materia_path, class: "btn"
