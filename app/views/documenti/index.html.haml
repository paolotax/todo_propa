= new_button( new_documento_url )

- title "Documenti"

.row
  = render 'documenti_side'

  .content-main.span6
    %header.content-header
      .header-inner
        %h2 Documenti
    
    = render :partial => 'shared/filters'

    #documenti.list
      = render "grouped_documenti"
    
    .stream-loader
      = paginate @documenti

  .side-bar.span3
    
    /   - [@righe_da_fatturare, @righe_da_pagare ].each_with_index do |righe, index|

    /     - index == 0 ? label = "pagati" : label = "da incassare" 

    /     .module
    /       .header
    /         = show_hide_tag "down"
    /         %h3
    /           = number_to_currency righe.sum(&:importo)
    /           %small= label
    /       .more.hidden
                          
    /         - unless righe.empty?
              
    /           - for c, r in righe.group_by(&:cliente) do
    /             .cliente-vendite
    /               %header
    /                 = link_to  c do
    /                   %span.titolo= c[:titolo]
                  
    /               - for a, righe in r.group_by(&:appunto) do               
