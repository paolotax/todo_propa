    .well.well-small

      = form_tag :create_multiple_documenti, method: :put, class: 'form-horizontal', id: "form-genera-documenti" do

        %h3 Genera documenti

        %hr

        .control-group
          %label.control-label{ for: 'inputAnno' } Anno
          .controls
            = select_tag "anno", options_for_select(["2020", "2019", "2018", "2017", "2016", "2015", "2014", "2013", "2012", "2011", "2010"], params[:anno]), class: "input-block-level", id: 'inputAnno'
        
        .control-group
          %label.control-label{ for: 'inputCausale' } Tipo documento
          .controls
            = select_tag "causale_id", options_for_select([["Buoni di consegna", 2], ["documenti", 0]]), class: "input-block-level", id: 'inputCausale'

        .control-group
          %label.control-label{ for: 'inputClienti' } Clienti
          .controls
            = select_tag "tipo_cliente", options_for_select(["Scuole", "Altri", "Tutti"]), class: "input-block-level", id: 'inputClienti'

        .control-group
          %label.control-label{ for: 'inputPagamento' } Pagamento
          .controls
            = select_tag "pagamento", options_for_select(['Pagati', 'In sospeso', 'Tutti']), class: "input-block-level", id: 'inputPagamento'

        .control-group
          %label.control-label{ for: 'inputData' } Data documenti
          .controls
            = select_tag "data", options_for_select(['data creazione', 'data ultima modifica', 'ultima data', 'oggi']), class: "input-block-level", id: 'inputData'

        .contol-group
          .controls
            %label.checkbox
              = check_box_tag "raggruppa" 
              raggruppa per cliente
        
        %hr

        .contol-group
        
          .controls
            = submit_tag "Genera", class: "btn btn-primary", confirm: "Sei sicuro"


    .well.well-small

      = form_tag :modifica_numero_documenti, method: :put, class: 'form-horizontal', id: "form-modifica-numero" do

        %h3 Modifica Numero

        %hr

        .control-group
          %label.control-label{ for: 'inputAnno' } Anno
          .controls
            = select_tag "anno", options_for_select(["2020", "2019", "2018", "2017", "2016", "2015", "2014", "2013", "2012", "2011", "2010"], params[:anno]), class: "input-block-level", id: 'inputAnno'
        
        .control-group
          %label.control-label{ for: 'inputCausale' } Tipo documento
          .controls
            = select_tag "causale", options_for_select(["Buono di consegna", "Ordine"]), class: "input-block-level", id: 'inputCausale'
        
        %hr

        .contol-group
        
          .controls
            = submit_tag "Modifica", class: "btn btn-primary", confirm: "Sei sicuro"

