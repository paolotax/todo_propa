!!!
%html
  %head
    %title= yield :title || "Untitled"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  #top
    = render "shared/header"
    %ul.subscribe.horizontal
  %div#wrapper(data-pjax-container)
    - if ['scuole', 'appunti'].include?(params[:controller])
      #nav_bar
        %ul.nav.horizontal
          %li= link_to_unless_current "Appunti",  appunti_url
          %li= link_to_unless_current "Scuole",   scuole_url
          %li= link_to_unless_current "Fatture",  root_url
          %li= link_to_unless_current "Giri",     scuole_url
        = render partial: "shared/search"
    #main
      - flash.each do |name, msg|
        = content_tag(:div, raw(msg), :id => "flash_#{name}")
      = yield
