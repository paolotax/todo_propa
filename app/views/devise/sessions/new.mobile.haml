%div{"data-role" => 'content'}
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    
    %p
      = f.label :username
      = f.text_field :username
    %p
      = f.label :password
      = f.password_field :password

    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me

    %p
      = f.submit "Sign in"
  
  




