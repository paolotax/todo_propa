.devise-form.well
  %h2 Accesso a you-propa

  %hr
  %br
    
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| 
    
    = f.input :login, label: "Utente o email"
    = f.input :password
    
    - if devise_mapping.rememberable?
      = f.input :remember_me, as: :boolean, label: "Ricordami"
    
    .control-group
      .controls
        = f.button :submit, "Accedi", class: "btn-primary"

  = render :partial => "devise/shared/links"
