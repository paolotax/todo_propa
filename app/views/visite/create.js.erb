
var new_baule_div = "<%= escape_javascript( baule_tag @visita.cliente ) %>"

$(".nav-baule sup").text("<%= current_user.visite.nel_baule.size %>");

if ($('.map-baule').length > 0) {
  var clienti = <%= raw current_user.clienti.nel_baule.to_gmaps4rails %>
  Gmaps.map.replaceMarkers(clienti)
};


if ($('.riepilogo-baule').length > 0) {
  $('.riepilogo-baule').replaceWith("<%= escape_javascript( render 'baule/riepilogo_baule' ) %>");
};


<%- @visita.cliente.appunti.each do |a|  %>
  appunto = $("#<%= dom_id(a) %>")
  if ($('.appunto').length > 0) {  
    <%- if a.stato != 'X' %>
      appunto.addClass('favorited');
    <% end %> 
    $('.baule_btn', appunto).replaceWith(new_baule_div);
  }  
<% end %>  


clienti = $(".<%= dom_id(@visita.cliente) %>")
if (clienti.length > 0) {
  clienti.addClass('favorited');
  $('.baule_btn', clienti).replaceWith(new_baule_div);
}
  

