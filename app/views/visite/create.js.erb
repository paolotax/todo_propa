if ($('.map-baule').length > 0) {
  var clienti = <%= raw current_user.clienti.nel_baule.to_gmaps4rails %>
  Gmaps.map.replaceMarkers(clienti)
};

if ($('.riepilogo-baule').length > 0) {
  $('.riepilogo-baule').replaceWith("<%= escape_javascript( render 'baule/riepilogo_baule' ) %>");
};

if ($('.appunto').length > 0) {
  <%- @visita.appunti.each do |a|  %>
    appunto = $("#<%= dom_id(a) %>")
    appunto.toggleClass('favorited');
    $('.baule_btn', appunto).replaceWith("<%= escape_javascript( baule_tag @visita.cliente ) %>");
  <% end %>  
};

if ($('.cliente').length > 0) {
  cliente = $(".<%= dom_id(@visita.cliente) %>")
  cliente.toggleClass('favorited');
  $('.baule_btn', cliente).replaceWith("<%= escape_javascript( baule_tag @visita.cliente ) %>");
};

$(".nav-baule sup").text("<%= current_user.visite.nel_baule.size %>");
