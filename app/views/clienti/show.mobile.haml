%div{ data: { role: 'content'} }
  %h1= @cliente.titolo
  %address
    %strong
      = "@#{@cliente.ragione_sociale || [@cliente.nome, @cliente.cognome].join(' ')}"
    %br
    = @cliente.indirizzo
    %br
    = "#{@cliente.cap} #{@cliente.frazione} #{@cliente.comune} #{@cliente.provincia}"
  %div.pull-left
    Partita IVA:
    = @cliente.partita_iva
    %br
    Codice Fiscale:
    = @cliente.codice_fiscale
  %div.pull-right
    %i{ class: 'icon-user'}
    = @cliente.telefono
    %br
    %i{ class: 'icon-envelope'}
    = @cliente.email
  
  %div{ data: { role: "controlgroup"} }
    = link_to "Nuovo Appunto", new_appunto_url(:cliente => @cliente), data: { role: "button", transition: "slidedown"}

  
  
  %p
    %a{ href: "#delete", data: { rel: "dialog", transition: "slidedown"} }
      Delete Contact


= content_for :other_pages do
  %div{ data: { role: "dialog" }, id: "delete" }  
    %div{ data: { role: "header" } }
      %h1 Header
      %div{ data: { role: "content" } }
        %h1{ style: "text-align: center;" }
          About This App
        %p{ style: "text-align: center;" }
          This app rocks!
        %a{ href: "#home", data: { role: "button", rel: "back"} }
          OK