  .content
    = render 'clienti/cliente_header',  cliente: @cliente

  .row
    .side-bar.span4

      .module
        .header
          = show_hide_tag
          %h3 Destinatari
        .more
          .list
            - @cliente.destinatari.each do |d|
              .item
                = d.destinatario
                = d.telefono
                = d.email

      - unless @righe_da_consegnare.empty?
        .module
          .header
            = show_hide_tag
            %h3 Libri da consegnare
          .more       
            = nested_righe_per_appunto( @righe_da_consegnare.to_a )

