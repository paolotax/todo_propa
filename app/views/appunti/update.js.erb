var appunto = $("#<%= dom_id(@appunto) %>");
var opened  = appunto.hasClass("opened");
var grouped = appunto.hasClass("grouped");

if (grouped == true) {
  appunto.replaceWith("<%= j render @appunto, grouped: 'grouped' %>");
} else {
  appunto.replaceWith("<%= j render @appunto %>");
}

if (opened == true) {
  $("#<%= dom_id(@appunto) %>").addClass("opened")
}

window.initializeAppunto($("#<%= dom_id(@appunto) %>"))