<div class="appunto_flash">
  <h2>Appunto salvato!</h2>
  <div class="appunto-wrap">
    <div class="intestazione">
      <div class="destinatario">{{destinatario}}</a></div>
      <div class="cliente_nome" >{{cliente_nome}}</a></div>
    </div>
    <div class="note"        >
      <span>{{{note}}}</span>
      <div class="recapiti {{con_recapiti}}">
        <div class="telefono"    >{{telefono}}</div>
        <div class="email"       >{{email}}</div>
      </div>
      <ul class="righe">
        {{#righe}}
        <li class="riga">{{titolo}} {{quantita}} x {{prezzo_unitario}} - {{sconto}}% = {{importo}} </li>
        {{/righe}}  
      </ul>
      <div class="totali"><span class="tot_copie">{{totale_copie}}</span> <span class="tot_importo">{{totale_importo}}</span></div>
    </div>
  </div>
  <div class="azioni">
    <a href="/appunti/new"         class="blue_button" title="Nuovo appunto" data-remote="true">Nuovo appunto</a>
    <a href="/appunti/{{id}}.pdf"  class="blue_button" title="Stampa pdf" target="_blank">Stampa pdf</a>
    <a href="/appunti/{{id}}/edit" class="blue_button" title="Modifica" data-remote="true">Modifica appunto</a>
    <a href="/appunti/{{id}}" class="red_button" title="Elimina appunto" data-confirm="Sei sicuro?" data-method="delete" data-remote="true">Elimina</a>
  </div>
  <div class="clear"></div>
</div>