= new_button( new_appunto_url(cliente: @appunto.cliente, destinatario: @appunto.destinatario, telefono: @appunto.telefono) )

- title @appunto.to_s

.content
  .row
    %section.span11
      %header
      %article.appunto.well
        .appunto-status
          .status-container
            = show_status_css(@appunto.stato)
          .star-container
        
        %div{ style: "margin-left: 150px"}  
          %h1= on_the_spot_edit @appunto, :destinatario
          %address
            %strong
              = "@#{@appunto.cliente.ragione_sociale || [@appunto.cliente.nome, @appunto.cliente.cognome].join(' ')}"
            %br
            = @appunto.cliente.indirizzo
            %br
            = "#{@appunto.cliente.cap} #{@appunto.cliente.frazione} #{@appunto.cliente.comune} #{@appunto.cliente.provincia}"
          
          
          %p
            %strong= on_the_spot_edit @appunto, :note 

          %p
            %small
              creato il: 
              = l @appunto.created_at, format: :only_date
              %br
              ultima modifica: 
              = l @appunto.updated_at, format: :only_date

          %div.pull-left
            %i{ class: 'icon-user'}
            = on_the_spot_edit @appunto, :telefono
            %br
            %i{ class: 'icon-envelope'}
            = on_the_spot_edit @appunto, :email
          .clearfix

        .pull-right
          %button.btn.btn-danger 
            %i.icon-trash
            Elimina
          %button.btn 
            %i.icon-print
            Stampa
          = link_to edit_appunto_path(@appunto), class: "btn btn-primary" do
            %i.icon-pencil
            Modifica
        .clearfix

        - unless @appunto.righe.empty?
          .table-righe
            %table.righe.table.table-striped.table-condensed
              - for r in @appunto.righe do
                %tr.riga
                  %td= r.titolo
                  %td= r.quantita
                  %td x
                  %td= r.prezzo_unitario
                  %td
                  %td= "- #{r.sconto}%" if r.sconto != 0.0
                  %td =
                  %td= r.importo 
              %tr.riga
                %td
                %td
                  %span.label.label-info= @appunto.totale_copie
                %td
                %td
                %td
                %td
                %td
                %td
                  %span.label.label-info
                    = "â‚¬ #{@appunto.totale_importo}"

