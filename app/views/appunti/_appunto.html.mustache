<div class="appunto {{stato}}" id="appunto_{{id}}">

  <div class="stato {{stato}}">{{stato}}</div>
  <div class="appunto-wrap">
    <div class="intestazione">
      <div class="destinatario pjax"><a href="/appunti/{{id}}">{{destinatario}}</a></div>
      <div class="cliente_nome pjax" ><a href="/clienti/{{cliente_id}}">{{cliente_nome}}</a></div>
      {{#con_recapiti}}        
      <div class="recapiti">
        <span class="telefono">{{telefono}}</span>
        <a href="mailto:{{email}}" class="email">{{email}}</a>
      </div>
      {{/con_recapiti}}      
    </div>
    <div class="note" >
      <div>
        {{{note}}}
        <!-- <span class="on_the_spot_editing" data-auth="{{auth_token}}" data-cancel="Annulla" 
              data-columns="40" data-edittype="textarea" data-ok="Ok" data-rows="3" 
              data-tooltip="Click per modificare ..."
              data-url="/appunti/update_attribute_on_the_spot?raw=true" id="appunto__note__{{id}}" 
              data-loadurl="/appunti/{{id}}/get_note"
              data-callback="testCallback"
              title="...">{{{note}}}</span> -->
      </div>
      
      {{#con_righe}}
      <div class="table-righe">      
        <ul class="righe">
          {{#righe}}
          <li class="riga">
            <span>{{titolo}}</span>
            <span>{{quantita}}</span>
            <span>x</span>
            <span>{{prezzo_unitario}}</span>
            <span>-</span>
            <span>{{sconto}}%</span>
            <span>=</span>
            <span>{{importo}}</span> 
          </li>
          {{/righe}}
        </ul>
        <div class="totali">
          <div>{{totale_copie}}</div>
          <div>{{totale_importo}}</div>
        </div>
      </div>
      {{/con_righe}}
    </div>
  </div>  
  <div class="info">
    {{id}}
    <div class="azioni">
      <div class="show"  ><a href="/appunti/{{id}}" title="mostra dettagli">Mostra</a></div>
      <div class="print" ><a href="/appunti/{{id}}.pdf" title="stampa pdf" target="_blank">Stampa</a></div>
      <div class="edit"  ><a href="/appunti/{{id}}/edit" title="modifica" data-remote="true">Modifica</a></div>
      <div class="delete"><a href="/appunti/{{id}}" title="elimina" data-confirm="Sei sicuro?" data-method="delete" data-remote="true">Elimina</a></div>
    </div>
  </div>
</div>