- title @libro.titolo


.content
  .row
    %section.span11
      %header
        / = render 'shared/title_bar', title: @cliente.to_s
      %article.libro.well
      
        .copertina{ style: "float: left;"}  
          / = image_tag copertina(@libro)
          = image_tag @libro.image_url
        
        %div{ style: "margin-left: 150px"}  
          %h1= @libro.titolo
          
          .badge.badge-info.pull-right 
            = pretty_prezzo @libro.prezzo_copertina 
          
          .badge.badge-info.pull-right  
            = pretty_prezzo @libro.prezzo_consigliato
            
          .clearfix
          
           
        .pull-right
          %button.btn.btn-danger 
            %i.icon-trash
            Elimina
          %button.btn 
            %i.icon-print
            Stampa
          = link_to edit_libro_path(@libro), class: "btn btn-primary" do
            %i.icon-pencil
            Modifica
        .clearfix
          