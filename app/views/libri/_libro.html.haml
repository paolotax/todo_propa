.item[libro]
  
  .content    
    .actions
      %ul.nav-appunto
        %li.show
          %a{ title: 'mostra dettagli', href: "#"}
            Apri
    
    .chiudi{ style: "float: right;"}
      %a{ title: 'chiudi', href: "#"}
        Chiudi    
    .stato
      = link_to image_tag(libro.image_url(:small_thumb)), libro
    = libro.titolo

	  
    - unless libro.prezzo_copertina.nil?
      = pretty_prezzo libro.prezzo_copertina
	  
    - unless libro.prezzo_consigliato.nil?
      = pretty_prezzo libro.prezzo_consigliato

  .more
    .content
      = libro.settore
      = libro.cm
      = libro.sigla

    
