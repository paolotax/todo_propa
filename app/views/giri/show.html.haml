- title "Giro del #{Chronic.parse(params[:giorno]).strftime('%d-%m-%Y')}"

= new_button( new_appunto_url )


- if @giro.visite.empty?
  .module
    .header
      .btn-group.pull-right
        = previous_tag  giro_url(giorno: @giro.ieri)
        = next_tag      giro_url(giorno: @giro.domani)
        
      %h2= "#{l @giro.giorno.to_date, format: :long_with_day} in cavalleria"
    .image
      = image_tag asset_path("cavaliere.jpg")

- else

  .module.white
    .header
      .btn-toolbar.pull-right
        .btn-group
          = link_to "Solenne", "", class: "btn btn-danger"
          %a{ class: "btn btn-danger dropdown-toggle", href: "#", data: {toggle: "dropdown"} }
            %span.icon-caret-down
          %ul.dropdown-menu
            %li
              %a domani
            %li
              %a dopo domani
        .btn-group
          = stampami_tag
          = link_to "esandi tutto", "", class: "esandi-tutto btn"
        .btn-group  
          = previous_tag  giro_url(giorno: @giro.ieri)
          = next_tag      giro_url(giorno: @giro.domani)
      %h2= "Giro di #{l @giro.giorno.to_date, format: :long_with_day}"

  .row    
    .span4
      = render :partial => 'list_giro'

      = render partial: "shared/riepilogo_libri", locals: { tipo_riepilogo: "volumi_da_consegnare", collection: @giro.righe_da_consegnare} 
      = render partial: "shared/riepilogo_libri", locals: { tipo_riepilogo: "adozioni", collection: @giro.adozioni}

    .span8
      .module.white
        .header
          = show_hide_tag
          %h3 Mappa
        = render 'baule/mappa_baule', clienti: @giro.clienti


      = render :partial => 'giri/visite_long'


