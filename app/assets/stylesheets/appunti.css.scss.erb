.content-list {
	width: 75%;
	min-width: 535px;
}


#appunto-small {
  margin-top: 16px;
  .condizioni label {
    display: inline;
  }
}


#appunti {
  background-color: #FFFFFF;
  .appunto {
    border-bottom: solid 1px #999999;
    padding-top: 3px;
    padding-bottom: 3px;
    &:first {
      border-top: solid 1px #999999;
    }
    &:hover .azioni {
      display: block;
    }
    .azioni {
      float: right;
      display: none;
      div {
        background-image:url( <%= asset_path "btn-strip.png" %>);
        background-color:transparen;
        background-origin:initial;
        background-repeat: no-repeat;
        float:right;
        height:16px;
        width:16px;
        margin-left: 7px;
        text-indent: -19999px;
        opacity: 0.6;
        &:hover {
          cursor:pointer;
          @include scale(1.5);
          opacity: 1;
        }
        &.show {
          background-position:0 0;
          &:hover {
            background-position:0 -16px;
          }
        }
        &.edit {
          background-position:0 -32px;
          &:hover {
            background-position:0px -48px;
          }
        }
        &.delete {
          background-position:0 -96px;
          &:hover {
            background-position:0 -112px;
          }
        }
        &.print {
          background-position:0 -64px;
          &:hover {
            background-position:0 -80px;
          }
        }
        a {
        	display: block;
        }
      }
    }
    .stato {
      display: block;
      float: left;
      width: 32px;
      height: 32px;
      text-indent: -9999px;
      margin-right: 10px;
      cursor: pointer;
      &.da_fare {
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
      }
      &.completato{
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
      }
      &.in_sospeso {
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
      }
    }
    .appunto-wrap {
      margin-left: 50px;
      margin-right: 110px;
      .intestazione {
        width: 30%;
        float: left;
        overflow: hidden;
      }
      .note {
        width: 65%;
        float: left;
      }
      .recapiti {
        float: left;
        background-color: green;
        &.senza_recapito {
          display: none
        }
      }
      .scuola_nome {
        margin-top:2px;
      }
      .destinatario {
      }
    }
	}
}


#appunto-show {
  // 
  .field {
    line-height: 27px;
  }
  .field .label {
    float: left;
    width: 160px;
    text-align: right;
    padding-right: 10px;
    display: block;
  }
  .label + div {
    font-size: 18px;
    margin-left: 170px;
  }
  h2.bar {
    padding: 4px 20px;
    margin: 0;
    font-weight: normal;
    color: #333;
    font-size: 14px;
    text-align: center;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    -webkit-border-top-left-radius: 6px;
    -webkit-border-top-right-radius: 6px;
    -moz-border-radius-topleft: 6px;
    -moz-border-radius-topright: 6px;
    border: solid 1px #BBB;
    border-bottom-color: #AAA;
    background-color: #DDD;
    background: -webkit-gradient(linear, left top, left bottom, from(#F3F3F3), to(#BBB));
    background: -moz-linear-gradient(top,  #F3F3F3, #BBB);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#F3F3F3', endColorstr='#BBB');
  }
}


