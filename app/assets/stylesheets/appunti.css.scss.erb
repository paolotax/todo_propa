@import "compass/css3/transform";

.note form textarea {
	font-size: 14px;
}

#appunti {
	width: 680px;
	background-color: #FFFFFF;
	.appunto {
		border-bottom: solid 1px #999999;
		padding-top: 3px;
		padding-bottom: 3px;
		&:first {
			border-top: solid 1px #999999;
		}
		&:hover .azioni {
			display: block;
		}
		.stato {
			display: block;
			float: left;
			width: 32px;
			height: 32px;
			text-indent: -9999px;
			margin-right: 10px;
			cursor: pointer;
			&.da_fare {
				background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
			}
			&.completato{
				background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
			}
			&.in_sospeso {
				background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
			}
		}
		.intestazione {
			width: 200px;
			float: left;
			overflow: hidden;
		}
		.note {
			width: 250px;
			float: left;
		}
		.recapiti {
			float: right;
			background-color: green;
			&.senza_recapito {
				display: none
			}
		}
		.scuola_nome {
			margin-top:2px;

		}
		.destinatario {

		}
		.azioni {
			float: right;
			display: none;
			div {
				background-image:url( <%= asset_path "td-strip.png" %>);
			  background-color:transparen;
			  background-origin:initial;
			  background-repeat: no-repeat;
			  float:right;
			  height:12px;
			  width:11px;
				margin-left: 7px;
			  text-indent: -19999px;
				&:hover {
					cursor:pointer;
					@include scale(1.5);
				}
			  &.edit {
					background-position:0 -48px;
					&:hover {
				    background-position:0px -60px;
				  }
				}
				&.delete {
					background-position:0 -24px;
					&:hover {
				    background-position:0 -36px;
				  }
				}
			  &.print {
					background-position:0 -24px;
					&:hover {
				    background-position:0 -36px;
				  }
				}

				a {
					display: block;
				}
			}
		}
	}
}



#collapse {
  background-color: #EEE;
  padding: 10px 20px;
  border: solid 1px #BBB;
  border-top: none;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  -webkit-border-bottom-left-radius: 5px;
  -webkit-border-bottom-right-radius: 5px;
  -moz-border-radius-bottomleft: 5px;
  -moz-border-radius-bottomright: 5px;
	.field {
		line-height: 27px;
	}
	.field .label {
		float: left;
	  width: 160px;
	  text-align: right;
	  padding-right: 10px;
		display: block;
		
	}
	.label + span {
		font-size: 18px;
		display: block;
	}
	h2.bar {
	  padding: 4px 20px;
	  margin: 0;
	  font-weight: normal;
	  color: #333;
	  font-size: 14px;
	  text-align: center;
	  border-top-left-radius: 6px;
	  border-top-right-radius: 6px;
	  -webkit-border-top-left-radius: 6px;
	  -webkit-border-top-right-radius: 6px;
	  -moz-border-radius-topleft: 6px;
	  -moz-border-radius-topright: 6px;
	  border: solid 1px #BBB;
	  border-bottom-color: #AAA;
	  background-color: #DDD;
	  background: -webkit-gradient(linear, left top, left bottom, from(#F3F3F3), to(#BBB));
	  background: -moz-linear-gradient(top,  #F3F3F3, #BBB);
	  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#F3F3F3', endColorstr='#BBB');
	}
}
	