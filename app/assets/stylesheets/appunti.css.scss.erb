@import "compass/css3/transform";
@import "mixins";

.note form textarea {
	font-size: 14px;
}

.content-list {
	width: 75%;
	min-width: 535px;
}

.group:before,
.group:after {
  content:"";
  display:table;
}

.group:after {
  clear:both;
}

.group {
  zoom:1;
}

.telefono:before { 
  content: "\2706"; 
  padding-right: 5px;
}

a[href^="mailto:"]:before { 
  content: "\2709";
  padding-right: 5px;
}

#appunto-small {
  margin-top: 16px;
  .condizioni label {
    display: inline;
  }
}


#appunti {
  background-color: #FFFFFF;
  .appunto {
    border-bottom: solid 1px #999999;
    padding-top: 3px;
    padding-bottom: 3px;
    &:first-child {
      border-top: solid 1px #999999;
    }
    &:hover .azioni {
      display: block;
    }
    .azioni {
      float: right;
      display: none;
      div {
        background-image:url( <%= asset_path "btn-strip.png" %>);
        background-color:transparent;
        background-origin:initial;
        background-repeat: no-repeat;
        float:right;
        height:16px;
        width:16px;
        margin-left: 7px;
        text-indent: -19999px;
        opacity: 0.6;
        &:hover {
          cursor:pointer;
          @include scale(1.5);
          opacity: 1;
        }
        &.show {
          background-position:0 0;
          &:hover {
            background-position:0 -16px;
          }
        }
        &.edit {
          background-position:0 -32px;
          &:hover {
            background-position:0px -48px;
          }
        }
        &.delete {
          background-position:0 -96px;
          &:hover {
            background-position:0 -112px;
          }
        }
        &.print {
          background-position:0 -64px;
          &:hover {
            background-position:0 -80px;
          }
        }
        a {
        	display: block;
        }
      }
    }
    .stato {
      display: block;
      float: left;
      width: 32px;
      height: 32px;
      text-indent: -9999px;
      margin-right: 10px;
      cursor: pointer;
      &.da_fare {
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
      }
      &.completato{
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
      }
      &.in_sospeso {
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
      }
    }
    .appunto-wrap {
      margin-left: 50px;
      margin-right: 110px;
      div {
        margin-top:2px;
      }
      .intestazione {
        width: 30%;
        float: left;
        overflow: hidden;
      }
      .note {
        width: 65%;
        float: left;
      }
      .recapiti {

        div {
          float: left;
          width: 50%;
        }
      }
      .cliente_nome {
        margin-top:2px;
      }
      .destinatario {
      }
    }
	}
}


