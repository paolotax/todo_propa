}

.content-header,
.filters,
#appunti,
#clienti,
.list, 
.stream-loader  {
  margin: 0 -15px 0 -15px;
}


.stream-loader {
  font-size: 13px;
  color: #777;
  text-align: center;
  padding: 30px 50px;
  background-color: white;
  -webkit-border-radius: 0 0 5px 5px;
  -moz-border-radius: 0 0 5px 5px;
  border-radius: 0 0 5px 5px;
}


.list {
  .item {
    position: relative;
    min-height: 51px;
    padding: 9px 12px 9px;
    border-bottom: 1px solid #E8E8E8;

    background: white;
    border-left: 1px solid #E8E8E8;
    border-left: 1px solid rgba(0, 0, 0, .1);
    border-right: 1px solid #E8E8E8;
    border-right: 1px solid rgba(0, 0, 0, .1);
    -webkit-background-clip: padding-box;
    -moz-background-clip: padding;
    background-clip: padding-box;
  }
}

#appunti,
#clienti {
  .appunto, .cliente {
    .content {
      margin-left: 46px;
    }
    .importo[data-value="0"] {
      display: none;
    }
    .importo {
      float: left;
      // position: absolute;
      //       bottom: 12px;
      //       right: 12px;
    }
    .more {
      display: none;
    }
    .content .actions .nav-appunto {
      display: none;
    }
    &:hover .time {
      display:none;
    }
    &:hover .content .actions .nav-appunto {
      display:block;
    }
    
    .chiudi {
      
      display: none;
    }
    
    &.opened:hover .chiudi {
      display: block;
    }
    
    
    &.opened {
      margin-top: 10px;
      margin-bottom: 10px;
      .importo,
      .time,
      .actions {
        display: none;
      }
      .more {
        display:block;
      }
      
    }
    
    .stato {
      position: absolute;
      top: 12px;
      left: 12px;
      display: inline-block;
      
      > a {
        line-height: 32px;
        text-indent: -9999px;
        cursor: pointer;
      }
            
      .icon-status {
        
        width: 40px;
        height: 32px;

        text-indent: -9999px;
        cursor: pointer;
        &.da_fare {
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
        }
        &.completato{
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
        }
        &.in_sospeso {
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
        }
        
      }
      

    }

    .full_name {
      font-weight: bold;
      color: #333;
    }

    a:hover .full_name {
      color: #999;
      text-decoration: none;
    }
  }
}

