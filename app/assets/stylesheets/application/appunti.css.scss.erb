.group:before,
.group:after {
  content:"";
  display:table;
}


.group:after {
  clear:both;
}

.group {
  zoom:1;
}

.telefono:before { 
  content: "\2706"; 
  padding-right: 5px;
}
.telefono:after { 
  content: ""; 
  clear: both;
}

a[href^="mailto:"]:before { 
  content: "\2709";
  padding-right: 5px;
}


