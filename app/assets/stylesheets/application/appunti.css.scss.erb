@import "compass/css3/transform";
@import "compass/utilities/text/ellipsis";
@import "compass/css3/box";
@import "compass/utilities/lists/inline-list";
@import "mixins";



input#prezzo_con_sconto {
  margin-top: 8px;
}

input[type=number] {
  text-align: right;
}

.nav-fattura,
.nav-appunto,
.nav-cliente {
  @include inline-list;
}

.appunti > div,
#appunti > div,
#clienti > div {

  position: relative;
  min-height: 51px;
  padding: 9px 12px 9px;
  border-bottom: 1px solid #E8E8E8;
  
  background: white;
  border-left: 1px solid #E8E8E8;
  border-left: 1px solid rgba(0, 0, 0, .1);
  border-right: 1px solid #E8E8E8;
  border-right: 1px solid rgba(0, 0, 0, .1);
  -webkit-background-clip: padding-box;
  -moz-background-clip: padding;
  background-clip: padding-box;

}

.time {
  position: absolute;
  right: 12px;
  font-size: 12px;
  color: #999;
  -webkit-transition: opacity .15s ease-in-out;
  -moz-transition: opacity .2s ease-in-out;
  transition: opacity .15s ease-in-out;
}

.select-check {
  position: absolute;
  right: 12px;
  bottom: 3px;
}

.destinatario {
  font-size: 12px;
  color: #999;
}

.fattura, .appunto, .cliente {
  position: relative;
  .actions {
    position: absolute;
    top: 10px;
    right: 12px;
    padding-left: 35px;
    background-position: 0 -240px;
    background-image: url(<%= asset_path "twitter_web_sprite_bgs.png" %>);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);
    
  }
}

.table-righe-new {
  padding: 5px 0 10px;
}
.appunti,
#appunti,
#clienti {
  .appunto, 
  .cliente {
    .content {
      margin-left: 46px;
    }
    .more {
      display: none;
    }
    .content .actions .nav-appunto,
    .content .actions .nav-cliente, {
      display: none;
    }
    &:hover .time {
      display:none;
    }
    &:hover .content .actions .nav-appunto,
    &:hover .content .actions .nav-cliente {
      display:block;
    }
    .chiudi {
      display: none;
    }
    &.opened:hover .chiudi {
      display: block;
    }
    &.opened {
      margin-top: 10px;
      margin-bottom: 10px;
      .time,
      .actions {
        display: none;
      }
      .more {
        display:block;
      }
    }
    .stato {
      position: absolute;
      top: 0;
      left: 12px;
      display: inline-block;
      > a {
        line-height: 32px;
        text-indent: -9999px;
        cursor: pointer;
      }
      .icon-status {
        width: 32px;
        height: 32px;
        text-indent: -9999px;
        cursor: pointer;
        &.da_fare {
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
        }
        &.completato{
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
        }
        &.in_sospeso {
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
        }
      }
    }
    .full_name {
      font-weight: bold;
      color: #333;
    }
    a:hover .full_name {
      color: #999;
      text-decoration: none;
    }
  }
}


.appunto {
  .footer-actions ul.nav-actions {
    @include inline-list;
  }
  .footer-actions {
    display: none;
  }
  &:hover .footer-actions,
  &.opened .footer-actions {
    float: left;
    display: block;
  }
}

.appunto.in_sospeso {
  .totale-copie,
  .totale-copie strong {
    color: #999 !important;
  }
  .totale-importo,
  .totale-importo strong{
    color: red !important;
  }
}

.appunto.completato {
  .totale-copie,
  .totale-copie strong {
    color: #999 !important;
  }
  .totale-importo,
  .totale-importo strong{
    color: #999 !important;
  }
}

// corregge quadratino orrendo grigio
.dropdown.open .dropdown-toggle {
  background: white;
}


.appunto-status .status-container {
  margin-left:20px;
}
.appunto-status .status-container, #td_task_info .star-container {
  float:left;
}

#status_span {
  height: 64px;
  width: 64px;
}

.appunto-status .status-container .active {
  background-attachment:initial;
  background-clip:initial;
  background-color:transparent;
  background-image: url(<%= asset_path "task-active.png" %>);
  background-origin:initial;
  background-repeat:no-repeat no-repeat;
}
.appunto-status .status-container .done {
  background-attachment:initial;
  background-clip:initial;
  background-color:transparent;
  background-image: url(<%= asset_path "task-completed.png" %>);
  background-origin:initial;
  background-repeat:no-repeat no-repeat;
}







.note form textarea {
