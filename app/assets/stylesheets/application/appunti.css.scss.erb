@import "compass/css3/transform";
@import "compass/utilities/text/ellipsis";
@import "compass/css3/border-radius";
@import "compass/css3/box";
@import "mixins";

.note form textarea {
	font-size: 14px;
}


.group:before,
.group:after {
  content:"";
  display:table;
}


.group:after {
  clear:both;
}

.group {
  zoom:1;
}

.telefono:before { 
  content: "\2706"; 
  padding-right: 5px;
}
.telefono:after { 
  content: ""; 
  clear: both;
}

a[href^="mailto:"]:before { 
  content: "\2709";
  padding-right: 5px;
}


#appunto-small {
  margin-top: 16px;
  .condizioni label {
    display: inline;
  }
}


#appunti {
  background-color: #FFFFFF;
  .appunto {
    border-bottom: solid 1px #999999;
    padding-top: 3px;
    padding-bottom: 3px;
    &:first-child {
      border-top: solid 1px #999999;
    }
    &:nth-child(odd) {
      background-color: #EEE;
    }
    &:hover {
      

    }
    &.selected {
      background-color: #A6C2E5;
    }
    &.pending {
      background-color: #A6C2E5;
      &:nth-child(even) {
        opacity: 0.8;        
      }
    }
    .stato {
      display: block;
      width: 32px;
      height: 32px;
      text-indent: -9999px;
      cursor: pointer;
      &.da_fare {
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
      }
      &.completato{
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
      }
      &.in_sospeso {
        background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
      }
    }
    .appunto-wrap {
      padding: 5px;
      .intestazione {
        width: 40%;
        .cliente_nome {
          margin-top: 2px;
        }
        .recapiti {
          font-size: 11px;
          margin-top: 20px;
         span, a {
            text-align: center;
            border: 1px solid #ccc;
            @include ellipsis;
            @include border-radius(5px);
            padding: 3px 5px 3px 5px;
            margin-top: 3px;
          }
          a[href="mailto:"] {
            display: none;
          }
          span:empty {
            display: none;
          }
          div {
            text-align: center;
            border: 1px solid #ccc;
            @include ellipsis;
            @include border-radius(5px);
            padding: 3px 5px 3px 5px;
            &:empty {
              display: none;
            }
          }
        }
      }
      .note {
        width: 60%;
      }
    }
    .info {
      width: 120px;
    }
    .azioni {
      display: none;
      div {
        background-image:url( <%= asset_path "btn-strip.png" %>);
        background-color:transparent;
        background-origin:initial;
        background-repeat: no-repeat;
        float:right;
        height:16px;
        width:16px;
        margin-left: 7px;
        text-indent: -19999px;
        opacity: 0.6;
        &:hover {
          cursor:pointer;
          // @include scale(1.5);
          // opacity: 1;
        }
        &.show {
          background-position:0 0;
          &:hover {
            background-position:0 -16px;
          }
        }
        &.edit {
          background-position:0 -32px;
          &:hover {
            background-position:0px -48px;
          }
        }
        &.delete {
          background-position:0 -96px;
          &:hover {
            background-position:0 -112px;
          }
        }
        &.print {
          background-position:0 -64px;
          &:hover {
            background-position:0 -80px;
          }
        }
        a {
        	display: block;
        }
      }
    }
  }
}


#appunto-show {
  // 
  .field {
    line-height: 27px;
  }
  .field .label {
    float: left;
    width: 160px;
    text-align: right;
    padding-right: 10px;
    display: block;
  }
  .label + div {
    font-size: 18px;
    margin-left: 170px;
  }
}


.appunto_flash {
  margin-top: 16px;
  width: 75%;
  
  .field label {
    float: left;
    width: 30%;
    text-align: right;
    margin-right: 10px;
    line-height: 27px;
    // padding-top: 2px;
  }
  .actions {
    padding-left: 30%;
    margin-left: 10px;
  }
  .field input, .field textarea {
    font-size: 14px;
  }
  .field select {
    // background: transparent;
    width: 214px;
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    height: 27px;
  }
