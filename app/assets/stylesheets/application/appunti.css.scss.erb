@import "compass/css3/transform";
@import "compass/utilities/text/ellipsis";
@import "compass/css3/box";
@import "compass/utilities/lists/inline-list";
@import "mixins";


.appunti,
#appunti,
#clienti {
  .appunto, 
  .cliente {
    .content {
      margin-left: 46px;
    }
    .more {
      display: none;
    }
    .content .actions .nav-appunto,
    .content .actions .nav-cliente, {
      display: none;
    }
    &:hover .time {
      display:none;
    }
    &:hover .content .actions .nav-appunto,
    &:hover .content .actions .nav-cliente {
      display:block;
    }
    .chiudi {
      display: none;
    }
    &.opened:hover .chiudi {
      display: block;
    }
    &.opened {
      margin-top: 10px;
      margin-bottom: 10px;
      .time,
      .actions {
        display: none;
      }
      .more {
        display:block;
      }
    }
    .stato {
      position: absolute;
      top: 12px;
      left: 12px;
      display: inline-block;
      > a {
        line-height: 32px;
        text-indent: -9999px;
        cursor: pointer;
      }
      .icon-status {
        width: 40px;
        height: 32px;
        text-indent: -9999px;
        cursor: pointer;
        &.da_fare {
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px 0 transparent;
        }
        &.completato{
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -34px transparent;
        }
        &.in_sospeso {
          background: url(<%= asset_path "task-status.png" %>) no-repeat scroll 7px -68px transparent;
        }
      }
    }
    .full_name {
      font-weight: bold;
      color: #333;
    }
    a:hover .full_name {
      color: #999;
      text-decoration: none;
    }
    .totali {
      position: absolute;
      bottom: 0;      
      right: 0;
      border-top: 1px solid #E8E8E8;
      color: #999;
      font-size: 10px;
      line-height: 16px;
      text-transform: uppercase;
      width: 30.08849557522124%;
      .totale-copie,
      .totale-importo {
        padding-top: 2px;
        padding-bottom: 2px;
        padding-left:  2.941176470588235%;
        padding-right: 2.941176470588235%;
        border-left: 1px solid #E8E8E8;
        strong {
          display: block;
          color: #333;
          font-size: 14px;     
        }    
      }
      .totale-copie {
        float: left;
        width: 25.882352941176475%;
        text-align: right;
      }
      .totale-importo {
        float: right;
        width: 61.1764705882353%;
        text-align: right;
      }      
    }
  }
}

.appunto {
  .footer-actions ul.nav-actions {
    @include inline-list;
  }
  .footer-actions {
    display: none;
  }
  &:hover .footer-actions,
  &.opened .footer-actions {
    float: left;
    display: block;
  }
}

.appunto.in_sospeso {
  .totale-copie,
  .totale-copie strong {
    color: #999 !important;
  }
  .totale-importo,
  .totale-importo strong{
    color: red !important;
  }
}

.appunto.completato {
  .totale-copie,
  .totale-copie strong {
    color: #999 !important;
  }
  .totale-importo,
  .totale-importo strong{
    color: #999 !important;
  }
}









