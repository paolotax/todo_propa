@import "compass/css3/transform";
@import "compass/utilities/text/ellipsis";
@import "compass/css3/box";
@import "mixins";

.note form textarea {
	font-size: 14px;
}


.group:before,
.group:after {
  content:"";
  display:table;
}


.group:after {
  clear:both;
}

.group {
  zoom:1;
}

.telefono:before { 
  content: "\2706"; 
  padding-right: 5px;
}
.telefono:after { 
  content: ""; 
  clear: both;
}

a[href^="mailto:"]:before { 
  content: "\2709";
  padding-right: 5px;
}


#appunto-small {
  margin-top: 16px;
  .condizioni label {
    display: inline;
  }
}

#appunto-show {
  // 
  .field {
    line-height: 27px;
  }
  .field .label {
    float: left;
    width: 160px;
    text-align: right;
    padding-right: 10px;
    display: block;
  }
  .label + div {
    font-size: 18px;
    margin-left: 170px;
  }
}


.appunto_flash {
  margin-top: 16px;
  width: 75%;
  
  .field label {
    float: left;
    width: 30%;
    text-align: right;
    margin-right: 10px;
    line-height: 27px;
    // padding-top: 2px;
  }
  .actions {
    padding-left: 30%;
    margin-left: 10px;
  }
  .field input, .field textarea {
    font-size: 14px;
  }
  .field select {
    // background: transparent;
    width: 214px;
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    height: 27px;
  }
}

