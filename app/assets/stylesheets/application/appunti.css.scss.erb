@import "compass/css3/transform";
@import "compass/utilities/text/ellipsis";
@import "compass/css3/box";
@import "compass/utilities/lists/inline-list";
@import "mixins";


input#prezzo_con_sconto {
  margin-top: 8px;
}

input[type=number] {
  text-align: right;
}

.nav-fattura,
.nav-appunto,
.nav-cliente {
  @include inline-list;
}

.select-check {
  position: absolute;
  right: 12px;
  bottom: 3px;
}

.destinatario {
  font-size: 12px;
  color: #999;
}

.item {
  position: relative;
  .actions {
    position: absolute;
    top: 10px;
    right: 12px;
    padding-left: 35px;
    background-position: 0 -240px;
    background-image: url(<%= asset_path "twitter_web_sprite_bgs.png" %>);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(enabled=false);    
  }
}

.table-righe-new {
  padding: 5px 0 10px;
}

.list {
  .item {
    .content {
      margin-left: 46px;
    }
    .more {
      display: none;
    }
    .content .actions .nav-appunto,
    .content .actions .nav-cliente, {
      display: none;
    }
    &:hover .time {
      display:none;
    }
    &:hover .content .actions .nav-appunto,
    &:hover .content .actions .nav-cliente {
      display:block;
    }
    .chiudi {
      display: none;
    }
    &.opened:hover .chiudi {
      display: block;
    }
    &.opened {
      margin-top: 10px;
      margin-bottom: 10px;
      .time,
      .actions {
        display: none;
      }
      .more {
        display:block;
      }
    }
    .stato {
      position: absolute;
      top: 10px;
      left: 12px;
      display: inline-block;
      > a {
        line-height: 32px;
        text-indent: -9999px;
        cursor: pointer;
      }
      .icon-status {
        margin: 5px;
        width: 22px;
        height: 22px;
        text-indent: -9999px;
        cursor: pointer;
        &.da_fare {
          background: url(<%= asset_path "task-sprite.png" %>) no-repeat scroll -26px -2px transparent;
        }
        &.preparato {
          background: url(<%= asset_path "task-sprite.png" %>) no-repeat scroll -26px -26px transparent;
        }
        &.completato{
          background: url(<%= asset_path "task-sprite.png" %>) no-repeat scroll -2px -2px transparent;
        }
        &.in_sospeso {
          background: url(<%= asset_path "task-sprite.png" %>) no-repeat scroll -2px -26px transparent;
        }
      }
    }
    .full_name {
      font-weight: bold;
      color: #333;
    }
    a:hover {
      text-decoration: none;
      .full_name {
        color: #999;        
      }
    }
  }
}

.appunto.in_sospeso {
  footer .copie strong {
    color: #d71322;
  }
   footer .importo-totale strong{
    color: #d71322;
  }
}

